<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="Chat" Height="650" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" MouseDown="MoveWindow" Style="{DynamicResource ToolBarStyle}">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Width="35" Click="MinimizeWindow" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15" Foreground="#F6F6F6" Style="{DynamicResource ToolButtonStyle}">-</Button>
                <Button Width="35" Click="ResizeWindow" Foreground="#F6F6F6" Style="{DynamicResource ToolButtonStyle}">/\</Button>
                <Button Width="35" Click="CloseWindow" FontSize="15" Foreground="#FC345C" Style="{DynamicResource ToolButtonStyle}">X</Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1" Style="{DynamicResource MainGridStyle}">
            <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
