<Page x:Class="Client.Views.RememberPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Views"
      mc:Ignorable="d" 
      d:DesignHeight="525" d:DesignWidth="1000"
      Title="RememberPassword">

    <Grid Background="White">
        <StackPanel Width="450"
                    VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="0 0 0 20" HorizontalAlignment="Center">
                <TextBlock FontSize="25">Remember password</TextBlock>
            </StackPanel>

            <StackPanel>
                <StackPanel Margin="0 0 0 15">
                    <TextBlock FontSize="14">Username:</TextBlock>
                    <TextBox FontSize="18" Height="24" TextAlignment="Center"></TextBox>
                </StackPanel>

                <StackPanel Margin="0 0 0 15">
                    <TextBlock FontSize="14">Secret word:</TextBlock>
                    <PasswordBox FontSize="18" Height="24" HorizontalContentAlignment="Center"></PasswordBox>
                </StackPanel>

                <Button FontSize="20" Margin="0 0 0 10" Command="{Binding RememberPasswordCommand}">Remember password</Button>

                <StackPanel HorizontalAlignment="Center">
                    <Button FontSize="15" Command="{Binding ShowSignInCommand}">Sign in</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
