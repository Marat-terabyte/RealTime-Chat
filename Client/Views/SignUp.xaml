<Page x:Class="Client.Views.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Views"
      mc:Ignorable="d" 
      d:DesignHeight="525" d:DesignWidth="1000"
      Title="SignUp">

    <Grid Background="White">
        <StackPanel Width="450"
                    VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="0 0 0 20" HorizontalAlignment="Center">
                <TextBlock FontSize="25">Sign up</TextBlock>
            </StackPanel>

            <StackPanel Margin="0 0 0 15" DataContext="{Binding Account}">
                <StackPanel Margin="0 0 0 15">
                    <TextBlock FontSize="14">Username:</TextBlock>
                    <TextBox FontSize="18" Height="24" TextAlignment="Center" Text="{Binding Username}"></TextBox>
                </StackPanel>

                <StackPanel Margin="0 0 0 10">
                    <TextBlock FontSize="14">Secret word:</TextBlock>
                    <TextBox FontSize="18" Height="24" HorizontalContentAlignment="Center" Text="{Binding SecretWord}"></TextBox>
                </StackPanel>

                <StackPanel>
                    <TextBlock FontSize="14">Password:</TextBlock>
                    <TextBox FontSize="18" Height="24" HorizontalContentAlignment="Center" Text="{Binding Password}"></TextBox>
                </StackPanel>
            </StackPanel>
            
            <StackPanel>
                <Button FontSize="20" Margin="0 0 0 10" Command="{Binding SignUpCommand}">Sign up</Button>

                <StackPanel HorizontalAlignment="Center">
                    <Button FontSize="15" Command="{Binding ShowSignInPageCommand}">Sign in</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
